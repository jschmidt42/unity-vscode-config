// Place your settings in this file to overwrite default and user settings.
{
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 200,
    "editor.wrappingIndent": "indent",
    "editor.minimap.enabled": false,

    //"tslint.configFile": "editor/tslint.json",

    "files.exclude": {
        "*.bsi": true,
        "*.diff": true,
        "*.fbx": true,
        "*.font": true,
        "*.log": true,
        "*.min.js": true,
        "*.orig": true,
        "*.svg": true,
        "*.user": true,

        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.hglf": true,
        "**/.nuget": true,
        "**/.svn": true,
        "**/.vs": true,
        "**/*.js.map": true,
        "**/*.js": { "when": "$(basename).ts" },
        "**/bin": true,
        "**/build": true,
        "**/Debug": true,
        "**/obj": true,
        "**/output": true,
        "**/packages": true,
        "**/Release": true,
        "**/VSCode-win32-*": true,

        "AssemblyInfo.cs": true,
        "disclaimer*.html": true,
        "sqlite3.c": true,
        "tests.log": true,

        "**/builds": true,
        "**/External": true,
        "**/Library": true,

        "build": true,
        "Src": true,
        "Projects": false,
        "Tools": false,
        "Tests": false,
        "artifacts/[^g]*": true,

        "Tests/**/Packages": true,
        "Editor/Tools": true
    },

    "search.exclude": {
        "**/*.bsi": true,
        "**/disclaimer*.html": true,
        "**/dist": true,
        "**/out": true,
        "**/*.svg": true,
        "**/node_modules": true,
        "**/3rdparty": true,
        "**/bower_components": true,
        ".vscode": true,

        "Tools": true,
        "Documentation": true
    },

    "files.associations": {
        "__functional_03": "cpp",
        "array": "cpp",
        "bindings": "cpp",
        "functional": "cpp",
        "qdesktopservices": "cpp",
        "qdir": "cpp",
        "qlocalserver": "cpp",
        "regex": "cpp",
        "rope": "cpp",
        "uss": "css",
        "uxml": "xml",
        "xiosbase": "cpp",
        "xml_attr.c": "cpp",
        "xml_cdata.c": "cpp",
        "xml_comment.c": "cpp",
        "xml_document_fragment.c": "cpp",
        "xml_entity_reference.c": "cpp",
        "xml_node.c": "cpp",
        "xml_processing_instruction.c": "cpp",
        "xml_text.c": "cpp",
        "xutility": "cpp"
    }
}
